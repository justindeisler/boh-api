# Application Configuration
NODE_ENV=development
PORT=3000
APP_NAME= Event Management API
API_VERSION=v1

# Database Configuration
DATABASE_URL=postgresql://user:password_dev@localhost:5432/db?pgbouncer=true&connection_limit=25

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password_dev

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=30m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRATION=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:3001,http://localhost:5173
CORS_CREDENTIALS=true

# Upload Configuration
UPLOAD_MAX_FILE_SIZE=10485760
UPLOAD_DESTINATION=./uploads
UPLOAD_ALLOWED_MIME_TYPES=image/jpeg,image/png,image/webp,image/gif,video/mp4,application/pdf

# Security
BCRYPT_ROUNDS=10
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info
LOG_DIR=./logs
